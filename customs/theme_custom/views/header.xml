<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="template_custom_theme_header"
                  inherit_id="website.template_header_centered_logo"
                  name="Template Custom Header">
            <xpath expr="//*[hasclass('oe_structure')][@id='oe_structure_custom_header']" position="replace">
                <div class="top-content">
                    <div class="container">
                        <div class="left-line">
                            <img src="/theme_custom/static/src/img/img.png"/>
                            <span>Hello</span>
                        </div>
                        <ul class="right-line">
                            <li>
                                <a target="_blank" class="fa fa-pinterest" href="#"></a>
                            </li>
                            <li>
                                <a target="_blank" class="fa fa-linkedin" href="#"></a>
                            </li>
                            <li>
                                <a target="_blank" class="fa fa-twitter" href="#"></a>
                            </li>
                            <li>
                                <a target="_blank" class="fa fa-facebook" href="#"></a>
                            </li>
                            <li>
                                <a target="_blank" class="fa fa-instagram" href="#"></a>
                            </li>
                            <li>
                                <a target="_blank" class="fa fa-envelope" href="#"></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="line"></div>
            </xpath>
        </template>
        <template id="custom_header" inherit_id="website.template_header_centered_logo">
            <xpath expr="//header//nav" position="replace">
                <div class="oe_structure oe_structure_custom" id="oe_structure_custom_header"/>
                <nav id="custom_nav" class="navbar navbar-dark bg-dark navbar-expand-lg">
                    <div id="top_menu_container" class="container-fluid">
                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler"/>
                        <div class="nav-logo-main">
                            <a href="/" class="nav-logo2"/>
                        </div>
                        <!-- Navbar Collapse -->
                        <div id="top_menu_collapse"
                             class="collapse navbar-collapse navbar-top-collapse">
                            <ul class="nav navbar-nav navbar-left">
                                <t t-set="a" t-value="len(website.menu_id.child_id)"/>
                                <t t-set="b" t-value="a/2"/>
                                <t t-set="c" t-value="b"/>
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-if="b &gt; 0 and submenu.name != 'Home'">
                                        <t t-call="website.submenu">
                                            <t t-set="item_class" t-value="'nav-item'"/>
                                            <t t-set="link_class" t-value="'nav-link'"/>
                                        </t>
                                    </t>
                                    <t t-set="b" t-value="b-1"/>
                                </t>
                            </ul>
                            <div class="brand_space">
                                <a href="/" class="nav-logo"></a>
                            </div>
                            <ul id="top_menu" class="nav navbar-nav navbar-right">
                                <t t-set="a" t-value="len(website.menu_id.child_id)"/>
                                <t t-set="c" t-value="a/2"/>
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-if="a &lt; c">
                                        <t t-call="website.submenu">
                                            <t t-set="item_class" t-value="'nav-item'"/>
                                            <t t-set="link_class" t-value="'nav-link'"/>
                                        </t>
                                    </t>
                                    <t t-set="c" t-value="c+1"/>
                                </t>
                            </ul>
                        </div>
                    </div>
                </nav>
            </xpath>
        </template>
    </data>
</odoo>